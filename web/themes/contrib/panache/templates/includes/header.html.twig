{% if page.header_left and page.header_center and page.header_right %}
  <div class="panache-header">
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-lg-4">
          {{ page.header_left }}
        </div>
        <div class="col-sm-12 col-lg-4">
          {{ page.header_center }}
        </div>
        <div class="col-sm-12 col-lg-4">
          {{ page.header_right }}
        </div>
      </div>
    </div>
  </div>
{% elseif page.header_left and page.header_center %}
  <div class="panache-header  panache-header__left-center">
    <div class="container">
      <div class="row">
        <div class="col-md-12 col-lg-4">
          {{ page.header_left }}
        </div>
